<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_note_month"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin"
        android:textSize="25sp"
        android:text="1970/01"
        android:textColor="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_note_day"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="50sp"
            android:text="01"
            android:layout_margin="@dimen/cardview_margin"/>
        <android.support.v7.widget.CardView
            android:id="@+id/item_note_card"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_note_color"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:src="@color/colorAccent"/>
                <LinearLayout
                    android:padding="@dimen/cardview_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_note_title"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="LTool是一款很良心很棒的软件"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/item_note_money"
                            android:singleLine="true"
                            android:lines="1"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:textColor="@android:color/holo_red_light"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/item_note_msg"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="LTool完全以人为本,从体验考虑,界面简洁而精致."/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/item_note_time"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:text="00:00"/>
                        <ImageView
                            android:id="@+id/item_note_icon"
                            android:tint="@android:color/darker_gray"
                            android:layout_width="15dp"
                            android:scaleType="centerInside"
                            android:layout_height="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>