<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="@dimen/cardview_elevation"
    android:padding="@dimen/cardview_padding">
    <ImageView
        android:id="@+id/item_shortcut_manager_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_shortcuts_lock"/>
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/cardview_margin">
        <TextView
            android:id="@+id/item_shortcut_manager_name"
            android:textSize="@dimen/item_name"
            android:textColor="@color/colorPrimary"
            android:text="@string/shortcuts_lock_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_shortcut_manager_msg"
            android:text="@string/shortcuts_lock_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/item_shortcut_manager_move"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_move"
            android:tint="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>