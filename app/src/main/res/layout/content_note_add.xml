<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_note_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xiaoliang.ltool.activity.note.NoteAddActivity"
    tools:showIn="@layout/activity_note_add"
    android:orientation="vertical">
    <ScrollView
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputEditText
                android:layout_marginLeft="@dimen/cardview_margin"
                android:layout_marginTop="@dimen/cardview_margin"
                android:textColorHint="@color/edit_hint_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="标题..."
                android:padding="@dimen/cardview_padding"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/content_note_add_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/content_note_add_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/cardview_margin"
                android:layout_marginBottom="@dimen/cardview_margin"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="@dimen/cardview_padding"
                android:paddingRight="@dimen/cardview_padding">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:tint="@android:color/darker_gray"
                        android:layout_marginLeft="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="添加新事项"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/content_note_add_address_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="@dimen/cardview_padding"
                    android:paddingRight="@dimen/cardview_padding">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_location"
                            android:tint="@android:color/darker_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:text="地址:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/content_note_add_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/edit_hint_color"
                            android:hint="@string/add_note_address"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/content_note_add_address_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cancel"
                            android:padding="5dp"
                            android:tint="@android:color/darker_gray"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/content_note_add_money_layout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_attach_money"
                                android:tint="@android:color/darker_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:text="金额:"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/content_note_add_money"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="@string/add_note_money"
                                android:textColorHint="@color/edit_hint_color"
                                android:inputType="numberDecimal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/content_note_add_money_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cancel"
                                android:padding="5dp"
                                android:tint="@android:color/darker_gray"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_marginLeft="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="类型:"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <RadioGroup
                                android:id="@+id/content_note_add_money_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/content_note_add_money_income_in"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收入"
                                    android:checked="true"/>
                                <RadioButton
                                    android:id="@+id/content_note_add_money_income_out"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="支出"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/content_note_add_alert_layout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_query_builder"
                                android:tint="@android:color/darker_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:text="全天"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical">
                            <android.support.v7.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:id="@+id/content_note_add_alert_day"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/content_note_add_alert_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cancel"
                                android:padding="5dp"
                                android:tint="@android:color/darker_gray"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_marginLeft="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="开始:"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:paddingLeft="@dimen/cardview_padding"
                                android:paddingRight="5dp"
                                android:paddingTop="@dimen/cardview_padding"
                                android:paddingBottom="5dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:id="@+id/content_note_add_alert_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择日期"
                                android:text="2016年11月01日"/>
                            <TextView
                                android:paddingRight="@dimen/cardview_padding"
                                android:paddingLeft="5dp"
                                android:paddingTop="@dimen/cardview_padding"
                                android:paddingBottom="5dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:id="@+id/content_note_add_alert_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择时间"
                                android:text="05:30"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_marginLeft="24dp"
                                android:text="结束:"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:paddingLeft="@dimen/cardview_padding"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="@dimen/cardview_padding"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:id="@+id/content_note_add_alert_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择时间"
                                android:text="2016年11月01日"/>
                            <TextView
                                android:paddingRight="@dimen/cardview_padding"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="@dimen/cardview_padding"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:id="@+id/content_note_add_alert_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择时间"
                                android:text="15:30"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add_alert"
                                android:tint="@android:color/darker_gray"/>
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:text="提醒"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical">
                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/content_note_add_alert_enable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cardview_padding"
                        android:paddingRight="@dimen/cardview_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_marginLeft="24dp"
                                android:text="提前:"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <android.support.design.widget.TextInputEditText
                                android:paddingLeft="@dimen/cardview_padding"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="@dimen/cardview_padding"
                                android:id="@+id/content_note_add_alert_advance_num"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:inputType="number"
                                android:gravity="center"
                                android:hint="请输入时间"
                                android:text="15"/>
                            <android.support.v7.widget.AppCompatSpinner
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/content_note_add_alert_advance_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:elevation="@dimen/cardview_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_format_list_bulleted"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_format_list_numbered"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_subject"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_attach_money"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_query_builder"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_location"
            android:tint="@android:color/darker_gray"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
    </LinearLayout>
</LinearLayout>
