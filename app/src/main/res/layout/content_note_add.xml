<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_note_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xiaoliang.ltool.activity.note.NoteAddActivity"
    tools:showIn="@layout/activity_note_add"
    android:orientation="vertical">
    <LinearLayout
        app:layout_collapseMode="pin"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/cardview_padding"
        android:paddingTop="@dimen/cardview_padding">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/content_note_add_title"
            android:textColorHint="@color/edit_hint_color"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="标题..."
            android:padding="@dimen/cardview_padding"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/content_note_add_color"
                android:padding="@dimen/cardview_padding"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_note_add_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>
    <LinearLayout
        android:elevation="@dimen/cardview_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/content_note_add_checklist_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_format_list_bulleted"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/content_note_add_numlist_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_format_list_numbered"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/content_note_add_text_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_subject"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/content_note_add_money_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_attach_money"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/content_note_add_time_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_query_builder"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/content_note_add_address_btn"
            android:onClick="onClick"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_location"
            android:paddingTop="@dimen/cardview_padding"
            android:paddingBottom="@dimen/cardview_padding"
            android:scaleType="centerInside"/>
    </LinearLayout>
</LinearLayout>
