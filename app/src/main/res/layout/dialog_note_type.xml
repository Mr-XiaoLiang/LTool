<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardview_padding">
        <ListView
            android:id="@+id/dialog_note_type_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/dialog_note_type_addlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:id="@+id/dialog_note_type_show"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dialog_note_type_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="笔记类型名称"
                        android:maxLength="20"
                        android:lines="1"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/cardview_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="透明度"/>
                <SeekBar
                    android:progress="255"
                    android:id="@+id/dialog_note_type_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/cardview_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="红色值"/>
                <SeekBar
                    android:id="@+id/dialog_note_type_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/cardview_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="绿色值"/>
                <SeekBar
                    android:id="@+id/dialog_note_type_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/cardview_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="蓝色值"/>
                <SeekBar
                    android:id="@+id/dialog_note_type_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:onClick="onClick"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/dialog_note_type_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/cardview_padding"
                    android:text="取消"
                    android:gravity="center"/>
                <TextView
                    android:onClick="onClick"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/dialog_note_type_done"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/cardview_padding"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
