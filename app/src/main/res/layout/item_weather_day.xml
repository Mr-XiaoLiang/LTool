<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:elevation="@dimen/cardview_elevation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:id="@+id/item_weather_weather_day"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="@dimen/cardview_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/item_weather_weather_day_date"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/item_weather_weather_day_time"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_weather_weather_day_temperature"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="白天:"
                android:textSize="14dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/item_weather_weather_day_daytype"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/item_weather_weather_day_daywind"
                android:textSize="14dp"
                android:gravity="bottom"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="夜晚:"
                android:textSize="14dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/item_weather_weather_day_nighttype"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/item_weather_weather_day_nightwind"
                android:textSize="14dp"
                android:gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>